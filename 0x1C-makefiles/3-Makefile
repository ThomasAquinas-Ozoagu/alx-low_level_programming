# Usage:
# make		# compile all binary
# make clean	# remove ALL binaries and objects

.PHONY: all clean oclean fclean re

CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
# RM

all: $(OBJ)
	$(CC) ${OBJ} -o ${NAME}

%.o: %.c
	$(CC) -c $< -o $@


clean:
	rm -f ${NAME} *~

oclean:
	rm -f ${OBJ}

fclean:
	rm -f ${NAME} *~
	rm -f ${OBJ}

re: oclean all
